                                              />
            <s:TagVisualizationDefinition Value="0x28" 
                                              Source="ScenarioVisualization.xaml"
                                              LostTagTimeout="2000"
                                              MaxCount="2"
                                              OrientationOffsetFromTag="0"
                                              PhysicalCenterOffsetFromTag="0,0" 
                                              TagRemovedBehavior="Fade"
                                              UsesTagOrientation="True"
                                              />
            <s:TagVisualizationDefinition Value="0x29" 
                                              Source="ScenarioVisualization.xaml"
                                              LostTagTimeout="2000"
                                              MaxCount="2"
                                              OrientationOffsetFromTag="0"
                                              PhysicalCenterOffsetFromTag="0,0" 
                                              TagRemovedBehavior="Fade"
